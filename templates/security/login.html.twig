{% extends 'base.html.twig' %}

{% block body %}
    <div class="container h-100 d-flex flex-column justify-content-around align-items-center">
        <img src="{{ asset('assets/images/assets/favicon.png') }}"  class="w-25 py-2" alt="Logo FighterStats™">
        <form class="text-center" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 fw-bold text-light" id="appTitle">FightersStats™ - Connexion</h1>

            <label for="inputUsername">Identifiant</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control rounded-pill text-center" autocomplete="username" required autofocus>
            <label for="inputPassword">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control rounded-pill text-center" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="w-50 rounded-pill btn btn-danger my-2" type="submit">Connexion</button>
            <a class="w-50 rounded-pill btn btn-outline-danger my-2" href="{{ path('app_register') }}">S'inscrire</a>
        </form>
    </div>
{% endblock %}
