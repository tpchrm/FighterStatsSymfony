{% extends 'base.html.twig' %}

{% block body %}
    <div class="container h-100 d-flex justify-content-around align-items-center">
        <div class="text-center">
            <h1 class="h3 mb-3 fw-bold text-light" id="appTitle">FightersStats™ - Inscription</h1>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username , {
                'label':'Identifiant',
            }) }}
            {{ form_row(registrationForm.lastname , {
                'label':'Nom',

            }) }}
            {{ form_row(registrationForm.firstname , {
                'label':'Prénom',
            }) }}
            {{ form_row(registrationForm.roles) }}
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Mot de Passe',
            }) }}
            {{ form_row(registrationForm.agreeTerms,
                {label: "J'accepte les conditions d'utilisation"}
            ) }}
            <button class="w-50 rounded-pill btn btn-danger my-2" type="submit">S'inscrire</button>
            {{ form_end(registrationForm) }}
            <a class="w-50 rounded-pill btn btn-outline-danger my-2" href="{{ path('app_login') }}">Se connecter</a>
        </div>
    </div>
{% endblock %}
