            {{ form_start(fighter_men_add, {
                'attr':{'class':'row g-3'}
            }) }}
            <div class="col-md-6">
                {{ form_row(fighter_men_add.lastname, {
                        'label':'Nom'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(fighter_men_add.firstname, {
                        'label':'Pr√©nom'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(fighter_men_add.height, {
                        'label':'Poids (en livres)'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(fighter_men_add.weight, {
                        'label':'Taille (en pouces)'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(fighter_men_add.origin, {
                        'label':'Pays'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(fighter_men_add.division, {
                        'label':'Division'
                }) }}
            </div>
        <div class="col-md-12">
                {{ form_row(fighter_men_add.enregistrer, {
