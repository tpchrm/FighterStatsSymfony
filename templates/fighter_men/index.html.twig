{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-danger" href="{{ path('fighter_men_add')}}">Ajouter un combattant</a>
    <table class="table table-dark table-bordered table-striped table-hover text-center">
        <thead>
        <tr>
            <td colspan="5">DIVISIONS</td>
        </tr>
        <tr>
            <td>Nom</td>
            <td>Pr√©nom</td>
            <td>Division</td>
            <td>Victoire</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for fighter_men in list_fighter_men %}
            <tr>
                <td>{{ fighter_men.lastname }}</td>
                <td>{{ fighter_men.firstname }}</td>
                <td>{{ fighter_men.division.divisionEng }}</td>
                {% if fighter_men.wins is empty %}
                    <td>0</td>
                {% else %}
                    <td> {{ fighter_men.wins}} </td>
                {% endif %}
                <td>
                    <a href="{{ path('fighter_men_show',{'id': fighter_men.id}) }}">Voir</a>
                    <a href="{{ path('fighter_men_update',{'id': fighter_men.id}) }}">Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
