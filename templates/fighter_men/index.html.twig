{% extends 'base.html.twig' %}

{% block navlink %}
    <a class="btn btn-outline-danger rounded-pill" href="{{ path('main_menu') }}">Retour menu</a>
{% endblock %}

{% block body %}
    <div class="row py-3">
        <div class="col-10">
            <h1 class="fw-bold text-center">Liste de tous les combattants</h1>
        </div>
        <div class="d-flex align-items-center col-2">
            <a class="btn btn-secondary" href="{{ path('fighter_men_add') }}">Ajouter un combattant</a>
        </div>
    </div>
    <table class="table table-dark table-bordered table-striped table-hover text-center">
        <thead>
        <tr>
            <td>Nom</td>
            <td>Prénom</td>
            <td>Détails</td>
        </tr>
        </thead>
        <tbody>
        {% for fighter_men in list_fighter_men %}
            <tr>
                <td>{{ fighter_men.lastname }}</td>
                <td>{{ fighter_men.firstname }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('fighter_men_show',{'id': fighter_men.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('fighter_men_update',{'id': fighter_men.id}) }}">Éditer</a>
                    <a class="btn btn-danger" href="{{ path('fighter_men_delete',{'id': fighter_men.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
