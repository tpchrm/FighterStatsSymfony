{% extends 'base.html.twig' %}

{% block navlinks %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('main_menu') }}">Accueil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('fighter_men') }}">Combattants</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('fight_list') }}">Combats</a>
        </li>
    </ul>
{% endblock %}

{% block returnlink %}
    <button class="btn btn-outline-danger rounded-pill" onclick="history.back();">Retour</button>
{% endblock %}

{% block body %}
    <h1 class="text-center">Modification d'un Combattant</h1>

    {{ form_start(fighter_men_update, {
        'attr':{'class':'row g-3'}
    }) }}
    <div class="col-md-6">
        {{ form_row(fighter_men_update.lastname, {
            'label':'Nom'
        }) }}
    </div>
    <div class="col-md-6">
        {{ form_row(fighter_men_update.firstname, {
            'label':'Pr√©nom'
        }) }}
    </div>
    <div class="col-md-6">
        {{ form_row(fighter_men_update.height, {
            'label':'Poids (en livres)'
        }) }}
    </div>
    <div class="col-md-6">
        {{ form_row(fighter_men_update.weight, {
            'label':'Taille (en pouces)'
        }) }}
    </div>
    <div class="col-md-6">
        {{ form_row(fighter_men_update.origin, {
            'label':'Pays'
        }) }}
    </div>
    <div class="col-md-6">
        {{ form_row(fighter_men_update.division, {
            'label':'Division'
        }) }}
    </div>
    <div class="col-md-12">
        {{ form_row(fighter_men_update.enregistrer, {
            'attr':{'class':'btn-danger w-100'}
        }) }}
    </div>
    {{ form_end(fighter_men_update) }}

{% endblock %}
