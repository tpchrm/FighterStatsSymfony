{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-danger" href="{{ path('fighter_men')}}">Retour au listing</a>
    <table class="table table-dark table-bordered table-striped table-hover text-center">
        <thead>
        <tr>
            <td colspan="7">Informations du combattant</td>
        </tr>
        <tr>
            <td>Nom</td>
            <td>Pr√©nom</td>
            <td>Origine</td>
            <td>Poids</td>
            <td>Taille</td>
            <td>Division</td>
            <td>Victoire</td>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ fighter_men_show.lastname }}</td>
                <td>{{ fighter_men_show.firstname }}</td>
                <td>{{ fighter_men_show.origin.name }}</td>
                <td>{{ fighter_men_show.height }}</td>
                <td>{{ fighter_men_show.weight }}</td>
                <td>{{ fighter_men_show.division.divisionEng }}</td>
                {% if fighter_men_show.wins is empty %}
                    <td>0</td>
                {% else %}
                    <td> {{ fighter_men_show.wins}} </td>
                {% endif %}
            </tr>
        </tbody>
    </table>
{% endblock %}
