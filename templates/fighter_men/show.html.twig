{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-danger" href="{{ path('fighter_men')}}">Retour au listing</a>
    <div class="d-flex row justify-content-evenly">
        <div class="d-flex flex-column col-md-6 col-sm-12 align-items-center p-2">
            <div class="d-flex justify-content-center col-md-6 py-3">
                <img src="{{ asset('assets/images/fighters/'~ fighter_men_show.firstname ~ fighter_men_show.lastname ~'.png') }}" class="img-fluid w-75">
            </div>
            <div class="col-md-6 col-sm-12 py-3 text-center">
                <span class="fw-bold fs-4">{{ fighter_men_show.firstname }} - {{ fighter_men_show.lastname }}</span>
            </div>

        </div>
        <div class="d-flex flex-column col-md-6 align-items-center">
            <label class="form-label">Origine</label>
            <div class="col-md-6 py-3 text-center">
                <span class="fw-bold fs-4">{{ fighter_men_show.origin.name }}</span>
            </div>
            <label class="form-label">Poids - Taille</label>
            <div class="col-md-6 py-3 text-center">
                <span class="fw-bold fs-4">{{ fighter_men_show.height }} - {{ fighter_men_show.weight }}</span>
            </div>
            <label class="form-label">Division</label>
            <div class="col-md-6 py-3 text-center">
                <span class="fw-bold fs-4">{{ fighter_men_show.division.divisionEng }}</span>
            </div>
            <label class="form-label">Victoire</label>
            <div class="col-md-6 py-3 text-center">
                <span class="fw-bold fs-4">
                    {% if fighter_men_show.wins is empty %}
                    0
                    {% else %}

                            {{ fighter_men_show.wins }}
                    {% endif %}</span>
            </div>
            <label class="form-label">DÃ©faite</label>
            <div class="py-3">
                <span class="fw-bold fs-4">
                    {% if fighter_men_show.wins is empty %}
                        0
                    {% else %}

                        {{ fighter_men_show.wins }}
                    {% endif %}</span>
            </div>
        </div>
        <table class="table table-dark table-bordered table-striped table-hover text-center">
            <thead>
            <tr>
                <td colspan="2" class="fs-2 fw-bold">Dernier Combats</td>
            </tr>

            </thead>
            <tbody>
            <tr>
                <td>{{ fighter_men_show.lastname }}</td>
                <td>{{ fighter_men_show.firstname }}</td>
            </tr>
            <tr>
                <td>{{ fighter_men_show.lastname }}</td>
                <td>{{ fighter_men_show.firstname }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
